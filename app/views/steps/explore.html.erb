
<form class="form-inline">
   <label for="search"></label><br>
    <input type="text" id="search" name="search" placeholder="Votre destination"><br>
     <div smaller-btn>
     <input type="submit" value="Rechercher" class="btn btn-orange-new">
     </div>
</form>

<div class="explorer-cards">

  <% @blocks.each do |block| %>
    <%  block.files.each do |file| %>

      <div class="card mt-3" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('<%= cl_image_path file.key %>');">
        <div class="card-infos">
          <div class="d-flex flex-column align-items-start justify-content-between container-card-infos">
              <span style="background: rgba(255, 255, 255, 0.8); border: 1px solid rgba(255, 255, 255, 0.8); border-top-right-radius: 5px; border-bottom-right-radius: 5px; padding: 5px 10px; color: rgba(0, 0, 0, 0.6); width: 50px;"><%= "#{(block.step.nb_of_days)} days" %></span>

              <p class="fixed-bottom" style="margin: 0 auto;"><%= block.step.title %></p>
          </div>
        </div>
      </div>

    <% end %>
  <% end %>

</div>

<%= form_tag explore_path, method: :get, class: "explore-form mt-5 mb-3" do %>

  <%= text_field_tag :search,
    params[:search],
    class: "form-control place-address",
    placeholder: "Votre destination"
  %>

  <%= button_tag(type: 'submit', class: 'btn', style: 'padding: 6px 0px; margin-left: 8px; color: white; background: #E26E2D') do %>
    <p style="padding: 0px 8px;">Rechercher</p>
  <% end %>
<% end %>


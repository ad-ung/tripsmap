<%= form_tag explore_path, method: :get, class: "explore-form mt-4 mb-2" do %>

  <%= text_field_tag :search,
    params[:search],
    class: "form-control place-address",
    placeholder: "Votre destination"
  %>

  <%= button_tag(type: 'submit', class: 'btn', style: 'padding: 6px 16px; margin-left: 8px; color: white; background: #E26E2D') do %>
    <i class="fa fa-search" aria-hidden="true"></i>
  <% end %>
<% end %>


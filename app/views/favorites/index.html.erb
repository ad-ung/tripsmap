<h2 class="trip-title mt-5 mb-3">Mes favoris</h2>

<div class="explorer-cards">

  <% @favorites.each do |favorite| %>
      <%=  link_to step_path(favorite.step) do %>
        <div class="card mt-3" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)), url('<%= cl_image_path favorite.step.cover_picture_key%>');">
          <div class="card-infos">
            <div class="d-flex flex-column align-items-start justify-content-between container-card-infos">
              <span style="background: rgba(255, 255, 255, 0.8); border: 1px solid rgba(255, 255, 255, 0.8); border-top-right-radius: 5px; border-bottom-right-radius: 5px; padding: 5px 10px; color: rgba(0, 0, 0, 0.6); width: 60px;"><%= "#{(favorite.step.nb_of_days)} jours" %></span>
              <p class="position-absolute w-100"><%= favorite.step.title %></p>
            </div>
          </div>
        </div>
      <% end %>
  <% end %>

</div>

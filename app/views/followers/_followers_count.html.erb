<!-- <strong><span style="font-size: 1.5rem"><%= @followers.count %></span></strong> abonnés -->

<button type="button" class="access-followers-button" data-toggle="modal" data-target="#exampleModalCenter">
  <strong><span style="font-size: 1.5rem;"><%= @followers.count %></span></strong> abonnés
</button>

<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle" style="text-align: center;">Abonnés</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% @followers.order("created_at DESC").each do |follower| %>
          <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="avatar-follower">
              <%= cl_image_tag User.find_by(pseudo:follower.follower_pseudo).avatar.key, class: "avatar-follower"  %>
            </div>
            <div class="follower-infos">
              <%= follower.follower_pseudo %>
            </div>
            <div class="follow-button">
              <button class="btn btn-primary">S'abonner</button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

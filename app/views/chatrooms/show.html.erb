<div class="entete">
<%= cl_image_tag User.find(@chatroom.recipient_id).avatar.key, class: "avatar-medium mt-5"%>
<%=
"#{User.find(@chatroom.recipient_id).pseudo}"%>
</div>

<div id="messages" data-chatroom-id="<%= @chatroom.id %>">
  <% @chatroom.messages.each do |message| %>
  <div class="message">
   <%= render "messages/message", message: message %>

  </div>
  <% end %>
</div>

<div class="champ-texte">
<%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
  <%= f.input :content, label: false, placeholder: "Tapez votre message" %>
<% end %>
</div>
